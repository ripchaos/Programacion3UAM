@model IEnumerable<Club>

@{
    ViewData["Title"] = "Lista de Clubes";
}

<div class="container mt-4">
    <h2 class="text-center">🏆 Clubes Históricos de la Champions League</h2>
    <p class="text-center">Aquí puedes ver los equipos más importantes de la historia de la UCL.</p>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-success">➕ Agregar Nuevo Club</a>
    </div>

    <table class="table table-hover table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th>🏟️ Nombre del Club</th>
                <th>📍 Ubicación</th>
                <th>📅 Año Fundado</th>
                <th>🏠 Estadio</th>
                <th>⚙️ Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var club in Model)
            {
                <tr>
                    <td><strong>@club.NombreClub</strong></td>
                    <td>@club.Ubicacion</td>
                    <td>@club.AñoFundado</td>
                    <td>@club.Sede</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@club.ClubId" class="btn btn-warning btn-sm">✏️ Editar</a>
                        <a asp-action="Details" asp-route-id="@club.ClubId" class="btn btn-info btn-sm">🔍 Detalles</a>
                        <a asp-action="Delete" asp-route-id="@club.ClubId" class="btn btn-danger btn-sm">🗑️ Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
