<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FutApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FutApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Anton&display=swap">

    <style>
        .navbar {
            background-color: rgba(0, 0, 0, 0.95) !important;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1050;
            padding: 10px 0;
        }

        .navbar-brand {
            font-family: 'Anton', sans-serif;
            font-size: 2rem;
            letter-spacing: 1px;
            color: #FFD700 !important;
            text-transform: uppercase;
        }

        .navbar-dark .navbar-nav .nav-link {
            color: white !important;
            font-weight: bold;
            transition: color 0.3s ease-in-out;
            cursor: pointer;
        }

            .navbar-dark .navbar-nav .nav-link:hover {
                color: #FFD700 !important;
            }

        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 1;
        }

        .content {
            position: relative;
            z-index: 2;
            text-align: center;
            padding-top: 150px;
            color: white;
            min-height: 80vh;
        }

        .footer {
            position: relative;
            bottom: 0;
            width: 100%;
            background-color: rgba(0, 0, 0, 0.9);
            padding: 15px 0;
            margin-top: 40px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">FutApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Clubes" asp-action="Index">Clubes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Futbolistas" asp-action="Index">Futbolistas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacidad</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <footer class="footer text-light text-center">
        <div class="container">
            &copy; 2025 - FutApp | <a asp-controller="Home" asp-action="Privacy" class="text-light">Política de Privacidad</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
