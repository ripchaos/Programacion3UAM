@model IEnumerable<Futbolista>

@{
    ViewData["Title"] = "Lista de Futbolistas";
}

<div class="container mt-4">
    <h2 class="text-center">⚽ Jugadores Históricos de la Champions League</h2>
    <p class="text-center">Aquí puedes ver a los jugadores más legendarios de la UCL.</p>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-success">➕ Agregar Nuevo Jugador</a>
    </div>

    <table class="table table-hover table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th>👤 Nombre</th>
                <th>🎂 Edad</th>
                <th>🏅 Posición</th>
                <th>🎽 Número</th>
                <th>🏟️ Club</th>
                <th>⚙️ Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var jugador in Model)
            {
                <tr>
                    <td><strong>@jugador.NombreCompleto</strong></td>
                    <td>@jugador.EdadActual</td>
                    <td>@jugador.Rol</td>
                    <td>@jugador.CamisetaNumero</td>
                    <td>@jugador.Club.NombreClub</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@jugador.FutbolistaId" class="btn btn-warning btn-sm">✏️ Editar</a>
                        <a asp-action="Details" asp-route-id="@jugador.FutbolistaId" class="btn btn-info btn-sm">🔍 Detalles</a>
                        <a asp-action="Delete" asp-route-id="@jugador.FutbolistaId" class="btn btn-danger btn-sm">🗑️ Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>